{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/main.py"
        },
        {
            "source": "/favicon.ico",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/favicon.png",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "headers": [
        {
            "source": "/frontend/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).(css|js|png|ico|svg)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=86400"
                }
            ]
        }
    ]
}